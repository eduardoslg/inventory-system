// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// criar uma migration: yarn prisma migrate dev
model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(150)
  email    String @unique @db.VarChar(120)
  password String

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("isys_user")
}

model Product {
  id Int @id @default(autoincrement())

  name             String  @db.VarChar(150)
  price            Float
  image            String?
  total            Int
  maximum_quantity Int
  minimum_quantity Int

  category    Category   @relation(fields: [category_id], references: [id])
  category_id Int
  Client      Client     @relation(fields: [client_id], references: [id])
  client_id   Int
  Movement    Movement[]

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("isys_product")
}

model Category {
  id Int @id @default(autoincrement())

  name String @db.VarChar(100)

  client_id Int
  Product   Product[]
  Client    Client    @relation(fields: [client_id], references: [id])

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("isys_category")
}

model Movement {
  id Int @id @default(autoincrement())

  amount Int

  MovementType     MovementType @relation(fields: [movement_type_id], references: [id])
  movement_type_id Int
  Product          Product      @relation(fields: [product_id], references: [id])
  product_id       Int

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("isys_movement")
}

model MovementType {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(50)
  Movement Movement[]

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("isys_movement_type")
}

model Client {
  id Int @id @default(autoincrement())

  businessName String  @db.VarChar(150)
  cnpj         String? @unique @db.Char(14)

  categories Category[]
  products   Product[]

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@map("isys_client")
}

model Budget {
  id Int @id @default(autoincrement())

  status_id    Int
  requester_id Int
  request_date DateTime @default(now())

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  Requester    Requester    @relation(fields: [requester_id], references: [id])
  BudgetItem   BudgetItem[]
  BudgetStatus BudgetStatus @relation(fields: [status_id], references: [id])

  @@map("isys_budget")
}

model BudgetStatus {
  id Int @id @default(autoincrement())

  name       String    @db.VarChar(250)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  Budget Budget[]

  @@map("isys_budget_status")
}

model Requester {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar(250)
  email String? @unique @db.VarChar(120)
  cpf   String? @db.Char(11)

  address_id Int?

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  Budget           Budget[]
  RequesterAddress RequesterAddress[]

  @@map("isys_requester")
}

model BudgetItem {
  id Int @id @default(autoincrement())

  budget_id    Int
  item_type_id Int

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  Budget         Budget         @relation(fields: [budget_id], references: [id])
  BudgetItemType BudgetItemType @relation(fields: [item_type_id], references: [id], onDelete: Cascade)

  @@map("isys_budget_item")
}

model BudgetItemType {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(100)

  value Decimal @db.Decimal(10, 2)

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  BudgetItem BudgetItem[]

  @@map("isys_budget_item_type")
}

model RequesterAddress {
  id Int @id @default(autoincrement())

  requester_id          Int
  uf                    String  @db.Char(2)
  zipCode               String  @db.Char(8)
  number                String? @db.VarChar(15)
  neighborhood          String  @db.VarChar(30)
  address               String  @db.VarChar(50)
  city                  String  @db.VarChar(30)
  additionalAddressData String? @db.VarChar(30)
  description           String? @db.VarChar(150)

  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  Requester Requester @relation(fields: [requester_id], references: [id], onDelete: Cascade)

  @@map("isys_requester_address")
}
